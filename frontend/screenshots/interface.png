<svg xmlns="http://www.w3.org/2000/svg" width="800" height="500" viewBox="0 0 800 500">
  <!-- Background -->
  <rect width="800" height="500" fill="#f5f5f5" rx="10" ry="10"/>
  
  <!-- App Container -->
  <rect x="150" y="50" width="500" height="400" fill="#ffffff" stroke="#e0e0e0" stroke-width="2" rx="8" ry="8"/>
  
  <!-- Header -->
  <rect x="150" y="50" width="500" height="60" fill="#3f51b5" rx="8" ry="8"/>
  <rect x="150" y="90" width="500" height="20" fill="#3f51b5"/>
  <text x="400" y="85" font-family="Arial" font-size="24" fill="#ffffff" text-anchor="middle" dominant-baseline="middle">Conversor de Moedas</text>
  
  <!-- Form Container -->
  <rect x="200" y="130" width="400" height="280" fill="#ffffff" rx="5" ry="5"/>
  
  <!-- Amount Input -->
  <rect x="220" y="150" width="360" height="50" fill="#f9f9f9" stroke="#e0e0e0" stroke-width="1" rx="4" ry="4"/>
  <text x="240" y="175" font-family="Arial" font-size="14" fill="#757575">Valor:</text>
  <rect x="300" y="160" width="260" height="30" fill="#ffffff" stroke="#e0e0e0" stroke-width="1" rx="4" ry="4"/>
  <text x="320" y="180" font-family="Arial" font-size="16" fill="#212121">100.00</text>
  
  <!-- Currency Selectors -->
  <rect x="220" y="220" width="160" height="50" fill="#f9f9f9" stroke="#e0e0e0" stroke-width="1" rx="4" ry="4"/>
  <text x="240" y="245" font-family="Arial" font-size="14" fill="#757575">De:</text>
  <rect x="280" y="230" width="80" height="30" fill="#ffffff" stroke="#e0e0e0" stroke-width="1" rx="4" ry="4"/>
  <text x="320" y="250" font-family="Arial" font-size="16" fill="#212121" text-anchor="middle">USD</text>
  
  <!-- Swap Button -->
  <circle cx="400" cy="245" r="20" fill="#3f51b5"/>
  <path d="M390,245 L410,245 M395,235 L390,245 L395,255 M405,235 L410,245 L405,255" stroke="#ffffff" stroke-width="2" fill="none"/>
  
  <rect x="420" y="220" width="160" height="50" fill="#f9f9f9" stroke="#e0e0e0" stroke-width="1" rx="4" ry="4"/>
  <text x="440" y="245" font-family="Arial" font-size="14" fill="#757575">Para:</text>
  <rect x="480" y="230" width="80" height="30" fill="#ffffff" stroke="#e0e0e0" stroke-width="1" rx="4" ry="4"/>
  <text x="520" y="250" font-family="Arial" font-size="16" fill="#212121" text-anchor="middle">BRL</text>
  
  <!-- Convert Button -->
  <rect x="220" y="290" width="360" height="40" fill="#3f51b5" rx="4" ry="4"/>
  <text x="400" y="315" font-family="Arial" font-size="16" fill="#ffffff" text-anchor="middle" dominant-baseline="middle">Converter</text>
  
  <!-- Result -->
  <rect x="220" y="350" width="360" height="50" fill="#e8f5e9" stroke="#c8e6c9" stroke-width="1" rx="4" ry="4"/>
  <text x="240" y="375" font-family="Arial" font-size="14" fill="#2e7d32">Resultado:</text>
  <text x="400" y="380" font-family="Arial" font-size="20" fill="#2e7d32" text-anchor="middle" font-weight="bold">100.00 USD = 520.45 BRL</text>
</svg>